/* pages/trailerDetail/trailerDetail.wxss */

@import "../../components/canvas/canvas.wxss";
.container {
    height: 100%;
}

.container header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    padding: 32rpx;
    position: relative;
}


/* 直播 */

.container .live-box .header {
    width: 750rpx;
    height: 420rpx;
    margin-bottom: 40rpx;
    position: relative;
    background-repeat: no-repeat;
    background-size: cover;
}

.container .live-box .header image {
    height: 100%;
    width: 100%;
    object-fit: cover;
}

.container .live-box .header .vr {
    position: absolute;
    right: 0;
    top: 0;
    width: 106rpx;
    height: 36rpx;
}
.container .live-box .header .play {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 108rpx;
    height: 108rpx;
    transform:translate(-50%,-50%);
}

.container .live-box .content {
    padding-left: 0;
    padding-right: 0;
    margin-left: -26rpx;
    margin-right: -26rpx;
}

.container .live-box .content .time {
    margin-bottom: 20rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.container .live-box .content .time image {
    width: 88rpx;
    height: 42rpx;
    margin-right: 19rpx;
}

.container .live-box .content .time view {
    font-size: 52rpx;
    color: #000;
    font-weight: 600;
    padding-right: 30rpx;
    position: relative;
    vertical-align: sub;
    line-height: 73rpx;
}

.container .live-box .content .time view:after {
    position: absolute;
    content: '';
    right: 0;
    height: 21rpx;
    width: 3rpx;
    background: #e6e6e6;
    top: 50%;
    margin-top: -10rpx;
}

.container .live-box .content .time text {
    font-size: 32rpx;
    color: #000;
    font-style: normal;
    margin-left: 17rpx;
}

.container .live-box .content .tit {
    font-size: 40rpx;
    color: #333333;
    max-height: 112rpx;
    line-height: 56rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
}

.container .live-box .content .anchor {
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60rpx;
}

.container .live-box .content .anchor .user {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.container .live-box .content .anchor .user image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    margin-right: 13rpx;
}

.container .live-box .content .anchor .user view {
    color: #333333;
    font-size: 29rpx;
    margin-right: 10rpx;
}

.container .live-box .content .anchor .iconbox {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.container .live-box .content .iconbox .active {
    display: flex;
    align-items: center;
    width: 48rpx;
    height: 48rpx;
    color: white;
    justify-content: center;
}

.container .live-box .content .iconbox .active image {
    width: 100%;
    height: 100%;
}

.container .live-box .content .anchor .zan {
    position: relative;
}

.container .live-box .content .anchor canvas {
    position: absolute;
    top: -90rpx;
    left: -25rpx;
    z-index: 20;
}

.container .live-box .content .anchor .zan .count {
    color: #DE524F;
    font-size: 22rpx;
    background: #FFFFFF;
    box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.2);
    border-radius: 15rpx;
    position: absolute;
    top: -40rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 80rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin: 0;
    text-align: center;
}

.container .live-box .content .anchor .zan span.active .icon-dianzan {
    color: #DE524F;
}

.container .live-box .content .anchor .zan img {
    width: 60rpx;
    height: 58rpx;
}

.container .live-box .txt p {
    margin: 0;
    font-size: 29rpx;
    font-weight: 400;
    color: #7E7E7E;
    line-height: 1.5;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    word-break: break-all;
}

.container .live-box .dcount {
    color: #666666;
    font-size: 30rpx;
    text-align: center;
    margin-bottom: 17rpx;
}

.container .live-box .dcount text {
    color: #DE524F;
    font-style: normal;
    font-weight: bold;
}

.container .live-box.detail .content {
    /* padding: 0 30rpx; */
    padding-left: 32rpx;
    padding-right: 27rpx;
    margin: 0;
}


