.container #body_cont {
    width: calc(100% - 60rpx);
    margin: 0 auto;
    padding: 15rpx 30rpx;
    box-sizing: border-box;
    background: #F6F7FC;
    border-radius: 20rpx;
    text-align: justify;
    font-size: 28rpx;
    font-family: '微软雅黑';
    color: #7e7e7e;
    line-height: 48rpx;
    display: block;
}

.container #body_cont p {
    width: 100%;
    font-size: 28rpx;
    font-family: '微软雅黑';
    color: #7e7e7e;
    line-height: 48rpx;
    text-align: left;
    white-space: normal;
}

.container #body_cont span {
    display: inline-block;
    white-space: pre-wrap;
}

.container #body_cont .rich-img {
    display: inline-block;
    max-width: 100% !important;
    height: auto !important;
}

.container #body_cont span {
    font-size: 28rpx;
    font-family: '微软雅黑';
    color: #7e7e7e;
    line-height: 48rpx;
    text-align: left;
}

.container #body_cont strong {
    font-size: 28rpx;
    font-family: '微软雅黑';
    color: #7e7e7e;
}

.container #body_cont a {
    text-decoration: none;
    color: #7e7e7e;
}

.container .live-box.detail .countdown {
    box-sizing: border-box;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    padding: 28rpx 30rpx 48rpx;
}

.container .live-box .bttom {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.container .live-box .bttom .share {
    outline: none;
    border: none;
    border-radius: 20rpx;
    height: 90rpx;
    color: #647EFF;
    font-size: 34rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
}

.container .live-box .bttom .share {
    width: 245rpx;
    height: 90rpx;
    border-radius: 20rpx;
    border: 2rpx solid #647EFF;
    background: white;
}

.container .live-box .bttom .share image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: bottom;
    margin-right: 17rpx;
}

.container .live-box .bttom .active {
    color: #fff;
    background: #647EFF;
    width: 425rpx;
    height: 90rpx;
}

.container .live-box .bttom .remind {
    width: 425rpx;
    height: 90rpx;
    background: #DDE2FF;
    border: none;
}


/* 弹框 */

.mask {
    background: white !important;
}

.mask .content {
    margin-top: 234rpx;
}

.mask .content .cover {
    width: 160rpx;
    height: 160rpx;
    margin: 0 auto;
    margin-bottom: 36rpx;
}

.mask .content .cover image {
    width: 100%;
    height: 100%;
}

.mask .content .tit {
    color: #333333;
    font-size: 40rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    text-align: center;
}

.mask .content .tips {
    color: #666;
    font-size: 30rpx;
    font-weight: 600;
    margin-bottom: 167rpx;
    text-align: center;
}

.mask .content .button {
    background: #647EFF;
    outline: none;
    border: none;
    border-radius: 20rpx;
    height: 90rpx;
    line-height: 90rpx;
    width: 690rpx;
    color: #fff;
    font-size: 34rpx;
    text-align: center;
    margin: 0 30rpx;
}

.container .maskBox {
    width: 100%;
    height: auto;
    padding: 0 90rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
}

.container .maskBox .cont-box {
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 48rpx 67rpx;
    box-sizing: border-box;
    background: white;
    border-radius: 20rpx;
    align-items: center;
}

.container .maskBox .cont-box h3 {
    height: 99rpx;
    font-size: 28rpx;
    font-family: 'MicrosoftYaHei';
    color: #333333;
    line-height: 48rpx;
}

.container .maskBox .cont-box .input_box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid #ccc;
    background: #f2f2f2;
    padding: 20rpx 0;
    border-radius: 20rpx;
    width: 100%;
}

.container .maskBox .cont-box .input_box input {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    font-family: 'MicrosoftYaHei';
    color: #CCCCCC;
    padding: 0 20rpx;
    box-sizing: border-box;
    outline: none;
    border: none;
    background: transparent;
    color: black;
}

.container .maskBox .cont-box .button {
    margin-top: 68rpx;
    width: 420rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #647EFF;
    border-radius: 20rpx;
    outline: none;
    border: none;
    color: white;
    font-size: 32prx;
    text-align: center;
}

.wrapper {
    overflow-x: hidden;
    overflow-y: scroll;
    position: relative;
    padding-bottom: 230rpx;
}